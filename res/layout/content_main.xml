<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f7f0fc"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alexthomas.myapplication.MainActivity"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140sp"
        app:srcCompat="@drawable/getwoke_header"
        android:id="@+id/getWoke"
        android:layout_marginTop="-40dp"

        />



    <TextView
        android:text="Alarm Unset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@+id/alarm_off"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/alarm_confirmation"
        android:textAlignment="center"
        />

    <TextClock
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:textSize="50dp"
        android:layout_below="@+id/getWoke"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <TextView
        android:text="Quoter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quoter"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Off"
        android:id="@+id/alarm_off"

        android:layout_alignBaseline="@+id/set_alarm"
        android:layout_alignBottom="@+id/set_alarm"
        android:layout_toRightOf="@+id/set_alarm"
        android:layout_toEndOf="@+id/set_alarm" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quote"
        android:id="@+id/motivationalQuote"
        android:textSize="30dp"
        android:textAlignment="center"
        android:typeface="sans"
        android:layout_below="@+id/textClock" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Alarm"
        android:id="@+id/set_alarm"
        android:layout_below="@id/motivationalQuote"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="125sp"/>

</RelativeLayout>
